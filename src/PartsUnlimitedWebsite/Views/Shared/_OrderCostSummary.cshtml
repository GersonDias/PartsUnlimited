@model PartsUnlimited.ViewModels.OrderCostSummary


<div class="cost-summary">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-6 col-md-4 col-md-offset-8">
            <div class="row">
                <div class="col-xs-6">Sub Total</div>
                <div class="col-xs-6 cost-value" id="cart-sub-total">@Model.CartItemsTotal</div>
            </div>
            <div class="row">
                <div class="col-xs-6">Shipping</div>
                <div class="col-xs-6 cost-value" id="cart-shipping">@Model.CartShipping</div>
            </div>
            <div class="row">
                <div class="col-xs-6">Tax</div>
                <div class="col-xs-6 cost-value" id="cart-tax">@Model.CartTax</div>
            </div>
            <hr />
            <div class="row">
                <div class="col-xs-6">Subtotal</div>
                <div class="col-xs-6 cost-value" id="cart-tax">@Model.CartSubTotal</div>
            </div>

            @if (!string.IsNullOrEmpty(Model.CartDiscount))
            {
                <div class="total">
                    <div class="row">
                        <div class="col-xs-6 cost-header">Discount</div>
                        <div class="col-xs-6 cost-value" id="cart-total">@Model.CartDiscount</div>
                    </div>
                </div>
            }
            
            <div class="total">
                <div class="row">
                    <div class="col-xs-6 cost-header">Total</div>
                    <div class="col-xs-6 cost-value" id="cart-total">@Model.CartTotal</div>
                </div>
            </div>
        </div>
    </div>
</div>
